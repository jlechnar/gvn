        nr-unpushed-commits = "!bash -c ' \
          nr=0; \
          has_upstream=`git has-upstream`; \
          if [[ \"$has_upstream\" == \"1\" ]]; then \
            nr=`git log --no-color @{push}.. --oneline | wc -l`; \
          fi; \
          echo $nr; \
          ' --"
        nr-unpushed-files = "!bash -c ' \
          nr=0; \
          has_upstream=`git has-upstream`; \
          if [[ \"$has_upstream\" == \"1\" ]]; then \
