                cd -- \"${GIT_PREFIX:-.}\"; \
                CWD=`pwd`; \
                if [[ \"$#\" == \"1\" ]]; then \
                  rp=`realpath --relative-to=${CWD} ${BWD}`; \
                  git ls $rp | egrep \"$1\"; \
                elif [[ \"$#\" == \"2\" ]]; then \
                  git ls \"$2\" | egrep \"$1\"; \
                else \
                  echo \"ERROR: options missing - check parameters git find <file_name> <folder> OR git find <file_name> to search in current folder recursively\"; \
